<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hafizh.him.tipscalculator.MainActivity">

    <TextView
        android:id="@+id/tagihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tagihan"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/input1"
        android:layout_below="@+id/tagihan"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/tagihan"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input1"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/input2"
        android:layout_below="@id/input1"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/persen"
        android:layout_below="@+id/input1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/persen"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:text="%"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/input1"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Persen Tip" />

    <EditText
        android:id="@+id/input3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input2"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:inputType="numberDecimal" />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input2"
        android:layout_alignBottom="@id/input3"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Jumlah Orang"/>

    <Button
        android:id="@+id/hitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input3"
        android:text="Hitung"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:onClick="calculator"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hitung"
        android:textSize="20dp"
        />

</RelativeLayout>
